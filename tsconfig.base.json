      "@trip-kaizen-sor-workspace/booking-statistics-lib": [
        "libs/booking-statistics-lib/src/index.ts"
      ],
      "@trip-kaizen-sor-workspace/hotel-search-lib": [
        "libs/hotel-search-lib/src/index.ts"
      ],
      "@trip-kaizen-sor-workspace/shared-lib": [
        "libs/shared-lib/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}